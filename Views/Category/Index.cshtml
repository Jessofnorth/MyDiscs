@model IEnumerable<MyDiscs.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<section>
    <h1>@ViewData["Title"]</h1>
    <article class="pb-5">
        @* form that uses the search method in controller *@
        <form asp-action="Search">
            <label for="searchString" class="fs-3 fw-semibold">Search for category:</label>
            <div class="input-group">
                <input type="text" name="searchString" id="searchString" placeholder="Search category.." class="form-control" />
                <div class="input-group-append">
                    <input type="submit" class="btn btn-outline-success" value="Search" />
                </div>
            </div>
        </form> 
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
                <div class="alert alert-danger mt-2">@ViewBag.Message</div>
        } 
    </article>
<article>
    <p>
         <a class="btn btn-success btn-lg" asp-action="Create"><i class="bi bi-plus-circle pe-2"></i>Create New Category</a>
    </p>
   <div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        <a class="btn btn-primary my-1" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                        <a class="btn btn-success my-1" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
                        <a class="btn btn-danger my-1" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</article>